<div class="row">
  <div class="col-sm-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title display-inline">
          <%= @task.description %>
        </h3>

        <span class='pull-right'>
          <a href="/tasks/<%= @task.id %>/edit">Edit</a>
        </span>
      </div>

      <div class="panel-body">
        <dl>
          <dt>Tags</dt>
          <dd>
            <% if @task.tags.empty? %>
              <i class="gray">No tags</i>
            <% else %>
              <% @task.tags.each do |tag| %>
                <span class="label label-info"><%= tag.name %></span>
              <% end %>
            <% end %>
          </dd>
          <dt>Created at</dt>
          <dd><%= @task.created_at %></dd>

          <% if @task.time_cost > 0 %>
            <dt>Estimated time:</dt>
            <dd><%= @task.time_cost %></dd>
          <% end %>
        </dl>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title display-inline">
          Time Records
        </h3>
      </div>

      <div class="panel-body">
        <% records_by_started_at = @time_records.sort_by(&:started_at).reverse.grouped_by_started_at %>
        <% records_by_started_at.each_pair do |date, records| %>
          <h3><%= date.strftime('%-d.%-m.%Y') %> - <%= date.strftime('%A') %>, <%= records.total_duration %></h3>

          <table class="table">
            <thead>
              <tr>
                <th class="col-sm-5">Task</th>
                <th class="col-sm-2">Duration</th>
                <th class="col-sm-2"></th>
              </tr>
            </thead>
            <tbody>
              <% grouped_by_task = records.grouped_by_task %>
              <% grouped_by_task.each do |group| %>
                <tr>
                  <td>
                    <b>
                      <% if group.first.task %>
                        <a href="/tasks/<%= group.first.task.id%>" class="undecorated-link"><%= group.first.task.description %></a>
                      <% else %>
                        <i class="gray">No task</i>
                      <% end %>
                    </b>
                  </td>
                  <td><b><%= group.total_duration %></b></td>
                  <td></td>
                </tr>

                <% group.each do |record| %>
                  <tr>
                    <td>
                      <% if record.description %>
                        <i><%= record.description %></i>
                      <% else %>
                        <i class="gray">No description</i>
                      <% end %>
                    </td>
                    <td><%= record.duration %>, started at <%= record.started_at.strftime("%H:%M") %></td>
                    <td>
                      <form action="/time_records/<%= record.id %>" method="post">
                        <div class="pull-right">
                          <button class="btn btn-default btn-xs" name="_delete_button" type="submit" value="true">
                            <i class="fa fa-trash fa-lg"></i>
                          </button>
                        </div>
                      </form>
                    </td>
                  </tr>
                <% end %>
              <% end %>
            </tbody>
          </table>
          <hr />
        <% end %>
      </div>
    </div>
  </div>
</div>
