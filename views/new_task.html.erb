<div class="row">
  <div class="col-sm-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        New task
      </div>

      <div class="panel-body">
        <form class='form-horizontal' action="/tasks" method="post">
          <div class="form-group">
            <div class="col-sm-12">
              <label for="description">Description</label>
              <input class="form-control" type="text" name="description" placeholder="buy some groceries" required autofocus/>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-9">
              <label for="tags">Tags</label>
              <input class="form-control" type="text" name="tags" placeholder="health, food" />
            </div>

            <div class="col-sm-3">
              <label for="time_cost">Time Cost</label>
              <input class="form-control" type="number" name="time_cost" placeholder="10" value="10" required/>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-12">
              <button type="submit" class="btn btn-success btn-block"><b>Create new task</b></button>
            </div>
          </div>
        </form>
      </div>

    </div>
  </div>

  <%= view('partials/task_settings_description.html', layout: false) %>
</div>
