<form class='form-inline filter-form' action="<%= form_path %>" method="get">
  <div class="form-group">
    <label for="status">Status</label>
    <label class="radio-inline">
      <input type="radio" name="status" value="complete" <%= "checked" if filter.status == 'complete' %>> Complete
    </label>
    <label class="radio-inline">
      <input type="radio" name="status" value="uncomplete" <%= "checked" if filter.status == 'uncomplete' %>> Uncomplete
    </label>
    <label class="radio-inline">
      <input type="radio" name="status" value="all" <%= "checked" if filter.status == 'all' %>> All
    </label>
  </div>

  <div class="form-group">
    <label for="description">Description</label>
    <input class="form-control" type="text" name="description" placeholder="Description" value="<%= filter.description %>"/>
  </div>

  <div class="form-group">
    <label for="tags">Tags</label>
    <input class="form-control" type="text" name="tags" placeholder="Tags" value="<%= filter.tags.join(', ') %>"/>
  </div>

  <a href="<%= form_path %>" class="btn btn-default pull-right">Reset filter</a>
  <button type="submit" class="btn btn-default pull-right">Filter</button>
</form>
